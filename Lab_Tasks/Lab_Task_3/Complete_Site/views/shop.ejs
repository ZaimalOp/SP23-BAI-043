<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gieves & Hawkes Shop</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/2e41040746.js" crossorigin="anonymous"></script>
    <style>
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 2rem;
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }
        .product-card {
            border: 1px solid #ddd;
            padding: 1rem;
            text-align: center;
            transition: transform 0.3s ease;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .product-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            margin-bottom: 1rem;
        }
        .product-name {
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
        }
        .product-price {
            font-weight: bold;
            color: #333;
            margin-bottom: 1rem;
        }
        .add-to-cart {
            background-color: #000;
            color: #fff;
            border: none;
            padding: 0.5rem 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .add-to-cart:hover {
            background-color: #333;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <!-- Products Section -->
    <section class="products-section">
        <h1>Our Products</h1>
        <div class="products-grid">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <img src="/images/<%= product.images %>" alt="<%= product.name %>" class="product-image">
                        <h3 class="product-name"><%= product.name %></h3>
                        <p class="product-price">$<%= product.price.toFixed(2) %></p>
                        <p class="product-description"><%= product.description %></p>
                        <button class="add-to-cart" onclick="addToCart('<%= product._id %>')">Add to Cart</button>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No products available at the moment.</p>
            <% } %>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        function addToCart(productId) {
            // Add to cart functionality will be implemented later
            alert('Product added to cart!');
        }
    </script>
</body>
</html>
