<%- include('../partials/header') %>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>All User Complaints</h1>
                <div>
                    <span class="badge bg-primary fs-6">Total: <%= complaints.length %></span>
                </div>
            </div>

            <% if (complaints && complaints.length > 0) { %>
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 20%;">User</th>
                                        <th style="width: 15%;">Order ID</th>
                                        <th>Message</th>
                                        <th style="width: 15%;">Submitted</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% complaints.forEach(complaint => { %>
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong><%= complaint.userId ? complaint.userId.email : 'Unknown User' %></strong>
                                                    <% if (complaint.userId && complaint.userId.name) { %>
                                                        <br><small class="text-muted"><%= complaint.userId.name %></small>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <code><%= complaint.orderId %></code>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 400px;" title="<%= complaint.message %>">
                                                    <%= complaint.message %>
                                                </div>
                                            </td>
                                            <td>
                                                <small>
                                                    <%= new Date(complaint.createdAt).toLocaleDateString() %><br>
                                                    <span class="text-muted"><%= new Date(complaint.createdAt).toLocaleTimeString() %></span>
                                                </small>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-inbox fa-3x text-muted"></i>
                    </div>
                    <h3 class="text-muted">No Complaints Found</h3>
                    <p class="text-muted">No complaints have been submitted by users yet.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>