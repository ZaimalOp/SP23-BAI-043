<%- include('partials/header.ejs') %>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>My Complaints</h1>
                <a href="/contact" class="btn btn-primary">Submit New Complaint</a>
            </div>

            <% if (complaints && complaints.length > 0) { %>
                <div class="row">
                    <% complaints.forEach(complaint => { %>
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">Order ID: <%= complaint.orderId %></h5>
                                        <small class="text-muted">
                                            <%= new Date(complaint.createdAt).toLocaleDateString() %>
                                        </small>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="card-text"><%= complaint.message %></p>
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            Submitted on: <%= new Date(complaint.createdAt).toLocaleString() %>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-inbox fa-3x text-muted"></i>
                    </div>
                    <h3 class="text-muted">No Complaints Found</h3>
                    <p class="text-muted">You haven't submitted any complaints yet.</p>
                    <a href="/contact" class="btn btn-primary">Submit Your First Complaint</a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    border: 1px solid rgba(0, 0, 0, 0.125);
    transition: transform 0.2s;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
}

.card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid rgba(0, 0, 0, 0.125);
}

.btn-primary {
    background-color: #41495d;
    border-color: #41495d;
}

.btn-primary:hover {
    background-color: #2c313d;
    border-color: #2c313d;
}

.text-muted {
    color: #6c757d !important;
}
</style>

<%- include('partials/footer.ejs') %>